# ---------------------------------
# General PostgreSQL Database
# ---------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=prodvor

# ---------------------------------
# Kong API Gateway Database
# ---------------------------------
KONG_PG_USER=kong
KONG_PG_PASSWORD=kongpassword
KONG_PG_DATABASE=kong_db

# ---------------------------------
# pgAdmin (PostgreSQL GUI)
# ---------------------------------
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# ---------------------------------
# RabbitMQ Message Broker
# ---------------------------------
RABBITMQ_DEFAULT_USER=user
RABBITMQ_DEFAULT_PASSWORD=password

# ---------------------------------
# MinIO (S3-compatible storage)
# ---------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# ---------------------------------
# Internal Service URLs
# ---------------------------------
# URL for the main database used by the backend application
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public

# URL for Redis cache
REDIS_URL=redis://redis:6379

# URL for Kafka message broker
KAFKA_BROKERS=kafka:9092

# URL for RabbitMQ message broker
RABBITMQ_URL=amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASSWORD}@rabbitmq:5672

# ---------------------------------
# S3 Configuration (for MinIO)
# ---------------------------------
S3_ENDPOINT_URL=http://minio:9005
S3_BUCKET_NAME=prodvor
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${MINIO_ROOT_USER}
AWS_SECRET_ACCESS_KEY=${MINIO_ROOT_PASSWORD}

# ---------------------------------
# Frontend Configuration
# ---------------------------------
# URL the frontend uses to talk to the backend (via Kong)
NEXT_PUBLIC_BACKEND_URL=http://kong:8000

# ---------------------------------
# CI/CD Environment Variables
# ---------------------------------
# This is used by some CLI tools like psql inside containers
PGPASSWORD=${POSTGRES_PASSWORD}
