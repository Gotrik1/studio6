
# Main PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=prodvor

# pgAdmin - Web UI for PostgreSQL
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# Keycloak - Identity and Access Management
KC_DB_DATABASE=keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=password
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=admin

# Kong - API Gateway
KONG_PG_PASSWORD=kong

# RabbitMQ - Message Broker
RABBITMQ_DEFAULT_USER=user
RABBITMQ_DEFAULT_PASSWORD=password

# MinIO - S3-Compatible Object Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# ----------------------------------------------------
# Application Environment Variables
# These are used by the backend and frontend services.
# ----------------------------------------------------

# URL to connect to the database from the backend service
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public

# URL for Redis cache
REDIS_URL=redis://redis:6379

# Kafka configuration
KAFKA_BROKERS=kafka:9092

# Keycloak configuration for the backend
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=prodvor
KEYCLOAK_CLIENT_ID=prodvor-frontend

# RabbitMQ URL for the backend
RABBITMQ_URL=amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASSWORD}@rabbitmq:5672

# S3/MinIO configuration for the backend
S3_ENDPOINT_URL=http://minio:9005
S3_BUCKET_NAME=prodvor
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${MINIO_ROOT_USER}
AWS_SECRET_ACCESS_KEY=${MINIO_ROOT_PASSWORD}

# URL for frontend to connect to the backend (via API Gateway)
NEXT_PUBLIC_BACKEND_URL=http://kong:8000

# Secret for JWT signing (should be a long, random string in production)
JWT_SECRET=your-very-secret-key-that-is-long-and-random
