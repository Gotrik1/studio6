# Main application database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=prodvor

# pgAdmin - for accessing the main DB
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# Keycloak Bootstrap Admin - initial admin user for Keycloak
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=admin

# Keycloak Database - SEPARATE from the main app DB
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=your_strong_keycloak_db_password
KC_DB_DATABASE=keycloak

# Kong API Gateway - listens on these ports
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_PROXY_LISTEN=0.0.0.0:8000

# Kong Database Password
KONG_PG_PASSWORD=your_strong_kong_db_password

# RabbitMQ
RABBITMQ_DEFAULT_USER=user
RABBITMQ_DEFAULT_PASSWORD=password

# JWT Secret for backend token signing (for prototype auth)
JWT_SECRET=your_super_secret_jwt_key_that_is_long_and_random

# --- The following are typically derived and do not need to be changed ---
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public
REDIS_URL=redis://redis:6379
KAFKA_BROKERS=kafka:9092
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=prodvor
KEYCLOAK_CLIENT_ID=prodvor-frontend
RABBITMQ_URL=amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASSWORD}@rabbitmq:5672
NEXT_PUBLIC_BACKEND_URL=http://kong:8000
PGPASSWORD=${POSTGRES_PASSWORD}
